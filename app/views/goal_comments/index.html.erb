<div class="page-header">
  <h1>
    Goal comments
    <a href="/goal_comments/new" class="btn btn-lg btn-success">New Goal comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>User</th>
        <th>Goal</th>
        <th>Actions</th>
      </tr>

      <% @goal_comments.each do |goal_comment| %>
      <tr>
        <td><%= goal_comment.body %></td>
        <td>
          <% if goal_comment.user.present? %>
            <a href="/users/<%= goal_comment.user.id %>">
              <%= goal_comment.user.first_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if goal_comment.goal.present? %>
            <a href="/goals/<%= goal_comment.goal.id %>">
              <%= goal_comment.goal.description %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/goal_comments/<%= goal_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/goal_comments/<%= goal_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_goal_comment/<%= goal_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @goal_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
