<div class="page-header">
  <h1>
    Plan comments
    <a href="/plan_comments/new" class="btn btn-lg btn-success">New Plan comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>User</th>
        <th>Plan</th>
        <th>Actions</th>
      </tr>

      <% @plan_comments.each do |plan_comment| %>
      <tr>
        <td><%= plan_comment.body %></td>
        <td><%= plan_comment.user.first_name %></td>
        <td><%= plan_comment.plan.title %></td>
        <td>
          <a href="/plan_comments/<%= plan_comment.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == plan_comment.user %>
            <a href="/plan_comments/<%= plan_comment.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_plan_comment/<%= plan_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @plan_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
