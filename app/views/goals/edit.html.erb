<!-- Validation failure messages -->
<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Goal #<%= @goal.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_goal/<%= @goal.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for plan_id -->
      <div class="form-group">
        <label for="plan_id" class="control-label">
          Plan
        </label>

        <input type="text" id="plan_id" name="plan_id" placeholder="Plan" class="form-control" value="<%= @goal.plan_id %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @goal.description %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Goal
      </button>
      or
      <a href="/goals/<%= @goal.id %>">Cancel</a>
    </form>
  </div>
</div>
