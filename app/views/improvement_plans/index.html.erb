<div class="page-header">
  <h1>
    Improvement plans
    <a href="/improvement_plans/new" class="btn btn-lg btn-success">New Improvement plan</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Status</th>
        <th>User</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>

      <% @improvement_plans.each do |improvement_plan| %>
      <tr>
        <td>
          <% if improvement_plan.status.present? %>
            <a href="/statuses/<%= improvement_plan.status.id %>">
              <%= improvement_plan.status.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if improvement_plan.user.present? %>
            <a href="/users/<%= improvement_plan.user.id %>">
              <%= improvement_plan.user.first_name %>
            </a>
          <% end %>
        </td>
        <td><%= improvement_plan.title %></td>
        <td>
          <a href="/improvement_plans/<%= improvement_plan.id %>" class="btn btn-primary">Show</a>
          <a href="/improvement_plans/<%= improvement_plan.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_improvement_plan/<%= improvement_plan.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @improvement_plans, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
