<div class="page-header">
  <h3>Coaching #<%= @coaching.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Plan</dt>
      <dd>
        <% if @coaching.plan.present? %>
          <a href="/improvement_plans/<%= @coaching.plan_id %>">
            <%= @coaching.plan.title %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @coaching.user.present? %>
          <a href="/users/<%= @coaching.user_id %>">
            <%= @coaching.user.first_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/coachings" class="btn btn-primary">
        Back
      </a>
      <a href="/coachings/<%= @coaching.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_coaching/<%= @coaching.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
